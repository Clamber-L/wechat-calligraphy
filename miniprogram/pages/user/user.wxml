<view class="user-container">
    <view class="avatar-section">
        <image class="avatar-image" src="/assets/avatar.png" mode="aspectFill" />
        <button class="change-avatar-button" open-type="chooseAvatar">修改头像</button>
    </view>

    <view class="form-section">
        <view class="form-item">
            <text class="label">用户名</text>
            <input class="input-underline" type="text" placeholder="请输入用户名" />
        </view>

        <view class="form-item">
            <text class="label">手机号码</text>
            <text class="readonly-text">138****8888</text>
        </view>
    </view>

    <button class="submit-button">提交修改</button>
</view>
